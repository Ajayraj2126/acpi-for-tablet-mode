Scope (\_SB.PCI0.LPCB)
{
    Device (EC0)
    {
        OperationRegion (ERAM, EmbeddedControl, 0x00, 0xFF)
        Field (ERAM, ByteAcc, NoLock, Preserve)
        {
            Offset (0xD5),
            HMOD, 8
        }

        Method (TBMS, 0, NotSerialized)
        {
            If (And (HMOD, 0x04))
            {
                Return (1)
            }
            Else
            {
                Return (0)
            }
        }

        Method (_Q42, 0, NotSerialized)
        {
            \_SB.TBLT.TBUP()
        }
    }
}
